{
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es5",
            "es2015.promise",
            "dom",
            "es2015"
        ],
        "target": "ES6",
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./build/",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src",
        "index.d.ts"
    ],
    "exclude": [
        "node_modules/"
    ]
}